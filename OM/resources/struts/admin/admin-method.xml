<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
	"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="admin-method" extends="app-default" namespace="/admin/method">
		<action name="list" class="neo.app.action.admin.MethodAction"
			method="list">
			<result name="list">method_list.ftl</result>
		</action>
		<action name="addMethod" class="neo.app.action.admin.MethodAction"
			method="addMethod" />
		<action name="preUpdate" class="neo.app.action.admin.MethodAction"
			method="preUpdate">
			<result name="preUpdate">method_info.ftl</result>
		</action>
		<action name="update" class="neo.app.action.admin.MethodAction"
			method="update" />
		<action name="delete" class="neo.app.action.admin.MethodAction"
			method="delete" />
	</package>
</struts>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" 
	"http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="front-ROOT" extends="app-default" namespace="/admin">
		<!-- 前台首页（包含登陆） -->
		<action name="index" class="neo.core.common.CommonAnonymousAction">
			<result>index.ftl</result>
		</action>
		<!-- 前台首页（包含登陆） -->
		<action name="login" class="neo.app.action.front.UserAction"
			method="frontLogin">
			<result type="redirect">${indexUrl}</result>
			<result name="homepage" type="redirect">frontIndex.action</result>
			<result name="error">index.ftl</result>
		</action>
		<!-- 前台登出，退出系统 -->
		<action name="frontLogout" class="neo.app.action.front.UserAction"
			method="frontLogout">
			<result>index.ftl</result>	
		</action>
		<!-- 前台首页 -->
		<action name="frontIndex" class="neo.core.common.CommonBaseAction">
			<result>index.ftl</result>
		</action>
	</package>
</struts>